interface Reflection {
	function claimDividend() external;
}

interface PlatformShare {
	function claimDividend() external;
}

contract DollyTokenMarketingVault {
    using SafeMath for uint256;
	using SafeBEP20 for IBEP20;
	
	address public DollyPad;
	uint256 private _divRate = 10000;
   
	address private receiver;

	Reflection private reflection;
	PlatformShare private platformShare;
	
	constructor (
		address _DollyPad
		,address _reflection
		, address _platformShare
		, address _receiver
	) public {
		reflection = Reflection(_reflection);
		platformShare = PlatformShare(_platformShare);
		
		DollyPad = _DollyPad;
		
		receiver = _receiver;
    }
	
	receive() external payable { }
	
	function claim() external payable {
		require(receiver == msg.sender, 'You aren\'t allowed to claim');
		
		platformShare.claimDividend();
		reflection.claimDividend();
		
		uint256 currentBalane = address(this).balance;
		if(currentBalane > 0){
			payable(msg.sender).transfer(currentBalane);
		}
	}
	
	function burn(uint256 _precentage) external {
		require(receiver == msg.sender, 'You aren\'t allowed to burn');
		
		platformShare.claimDividend();
		reflection.claimDividend();
		
		uint256 currentBalance = IBEP20(DollyPad).balanceOf(address(this));
		uint256 burnBalance = currentBalance.mul(_precentage).div(_divRate);
		IBEP20(DollyPad).safeTransfer(address(0),burnBalance);
	}
}
